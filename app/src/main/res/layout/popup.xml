<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="150dp" android:layout_width="250dp"
    android:layout_gravity="center"
    android:background="@drawable/backgroundborder">

    <ImageView
        android:id="@+id/leftImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="150dp"
        android:src="@drawable/baseline_keyboard_double_arrow_right_24"/>

    <ImageView
        android:id="@+id/rightImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/baseline_keyboard_double_arrow_left_24"/>

    <TextView
        android:id="@+id/deleteHelper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:text="Apagar"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/deleteHelper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:text="Mova a tarefa para:"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/editHelper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="22dp"
        android:gravity="center"
        android:text="Editar"
        android:textSize="20sp" />

</RelativeLayout>

